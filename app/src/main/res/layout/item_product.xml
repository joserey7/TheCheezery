<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/americano"
        android:layout_marginVertical="30dp"
        android:id="@+id/product_image"/>

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@string/condensed"
            android:id="@+id/product_name"
            android:textSize="20sp"
            android:text="EJEMPLO"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dustyBlack"
            android:fontFamily="@string/light"
            android:text="lorem ipsum descripcion"
            android:id="@+id/product_descripcion"
            android:textSize="8sp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/anotherPurple"
        android:textSize="19sp"
        android:textStyle="bold"
        android:text="$70"
        android:id="@+id/product_price"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"/>

</LinearLayout>